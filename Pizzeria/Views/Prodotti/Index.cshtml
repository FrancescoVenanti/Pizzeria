@model IEnumerable<Pizzeria.Models.Prodotti>

@{
    ViewBag.Title = "Index";
}

<h2 class="display-2">Le nostre pizze</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
     <div class="col-12 col-md-3">
        <div class="card">
            <img src="./Content/img/@Html.DisplayFor(modelItem => item.Foto)" class="card-img-top" alt="@Html.DisplayFor(modelItem => item.Nome)">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                <p class="card-text overflow-hidden">@Html.DisplayFor(modelItem => item.Ingredienti)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Prezzo)</p>
            </div>
            <div class="d-flex justify-content-around mb-3">
                @Html.ActionLink("Add to cart", "AddToCart", "Prodotti", new { id = item.idProdotto }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Edit", "Edit", new { id = item.idProdotto }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Details", "Details", new { id = item.idProdotto }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new { id = item.idProdotto }, new { @class = "btn btn-danger" })

            </div>
        </div>
     </div>
    }
</div>
