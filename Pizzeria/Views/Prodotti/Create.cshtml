@model Pizzeria.Models.Prodotti

@{
    ViewBag.Title = "Create";
}

<div class="p-3 bg-light rounded-3 bgCard">
    <h2 class="myHeading">Inserisci nuova pizza</h2>


    @using (Html.BeginForm("Create", "Prodotti", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal fw-bold">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <h6> Selezione un'immagine'</h6>
                <input type="file" name="File" id="File" class="form-control" />
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Prezzo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Prezzo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Prezzo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Consegna, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Consegna, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Consegna, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Ingredienti, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Ingredienti, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Ingredienti, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group my-2">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Inserisci" class="btn btn-success" />
                </div>
            </div>
        </div>
    }


    <div>
        @Html.ActionLink("Torna alle pizze", "Index", new { }, new { @class = "btn btn-primary" })
    </div>

</div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
